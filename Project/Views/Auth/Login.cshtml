@{
    Layout= "_LayoutForAuth";
    ViewData["Title"] = "Login Page";
}
@using Project.Models
@model  UserLoginDto
<style>
    .hero-section {
        background-image: linear-gradient(15deg, #13547a 0%, #80d0c7 100%);
        position: relative;
        overflow: hidden;
        padding-top: 150px;
        padding-bottom: 150px;
        min-height: 100%; /* Fallback for browsers do NOT support vh unit */
        min-height: 100vh; /* These two lines are counted as one :-)       */

        align-items: center;
    }
</style>

<section class="hero-section d-flex justify-content-center align-items-center bg-education" id="section_1">
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 d-flex justify-content-center">
                <form asp-action="Login" asp-controller="Auth" method="POST" class="custom-form w-50 align-content-center" asp-route-returnUrl="@ViewData["returnUrl"]">
                    <h1 class="h3 mb-3 font-weight-normal">Sign In To Your Account</h1>
                    <span asp-validation-for="Email" class="text-danger"> </span>
                    <label asp-for="Email" class="sr-only">Email address</label>
                    <input asp-for="Email" class="form-control my-spacing" placeholder="Email address" autofocus="">

                    <span asp-validation-for="Password" class="text-danger"> </span>
                    <label asp-for="Password" class="sr-only">Password</label>
                    <input type="password" asp-for="Password" class="form-control my-spacing" placeholder="Password">


                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>
                    <div class="d-flex justify-content-center"><button class="form-control btn btn-lg  btn-block w-100" type="submit">Sign in</button></div>
                    <div class="d-flex justify-content-center"> <a asp-action="Register" asp-route-returnUrl="@ViewData["returnUrl"]">Create an account</a></div>
                </form>
            </div>
            <div class="col-md-2"></div>
        </div>
        
    </div>
</section>


