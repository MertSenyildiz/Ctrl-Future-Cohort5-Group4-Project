@{
    Layout = "_LayoutAdmin";
}

@model IEnumerable<UserToShowDto>

<h1>User Manager</h1>

<div class="album py-5 bg-light">
<div class="container">
  <div class="row">
    @foreach(var item in Model)
    {
    <div class="col-md-4">
    <div class="card mb-4 box-shadow">
        <img class="card-img-top" src ="https://w7.pngwing.com/pngs/205/731/png-transparent-default-avatar-thumbnail.png" width="100%" height="225" alt="Card image cap">
        <div class="card-body">
        <p class="card-text">@item.Username</p>
        <p class="card-text">@item.Email</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
            <a type="btn btn-success" asp-controller="Admin" asp-action="Detail" asp-route-id="@item.ID" 
                class="btn btn-sm btn-outline-secondary">View</a>
            <a asp-controller="Admin" asp-action="EditUser" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary">Edit</a>
            
            <a asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary">Delete</a> 
            </div>
            <small class="text-muted">@item.Role</small>
        </div>
        </div>
    </div>
    </div>
    }

</div>
</div>
</div>              