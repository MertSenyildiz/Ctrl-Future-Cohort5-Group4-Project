@{
    Layout = "_LayoutAdmin";
}

@model IEnumerable<Course>


        <h3>All Courses</h3>

        <div class="container">
             <div class="row mt-4">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="@item.ImageUrl" width="100%" height="225" alt="Card image cap">
                            <div class="card-body">
                                <p class="card-text">@item.Title</p>
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a type="btn btn-success" asp-controller="Course" asp-action="@item.ID"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <a asp-controller="Admin" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary">Edit</a>

                                        <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    </div>
                                    <small class="text-muted">@item.Category</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            </div>
