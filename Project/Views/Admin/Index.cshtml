<style>
    .custom-block-image {
        display: block;
        width: 100%;
        height: 250px;
        object-fit: fill;
        margin-top: 35px;
    }

    .min-height {
        min-height: 60%;
        min-height: 60vh;
    }

    .max-height-p {
        max-height: 60px;
    }
</style>




<h3>All Courses</h3>

<div class="row mt-4">
    @foreach (var course in Model)
    {
        <div class="col-lg-4 col-md-6 col-12 mb-4 mb-lg-4">
            <div class="custom-block bg-white shadow-lg">
                <a asp-controller="Course" asp-action="@course.ID">
                    <div class="d-flex">
                        <div>
                            <h5 class="mb-2">@course.Title</h5>
                            <i>by @course.Username</i>
                            <p class="mb-0 text-wrap overflow-hidden max-height-p">@course.Description</p>
                        </div>

                        <span class="badge bg-design rounded-pill ms-auto" style="background-color:@CourseCategoryClass.Colors[(int)course.Category]">@course.EnrollmentCount</span>
                        
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@course.ID" class="btn btn-sm btn-outline-secondary">Edit</a>

                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@course.ID" class="btn btn-sm btn-outline-secondary">Delete</a>
                        </div>
                        </div>
                        <img src="@course.ImageUrl" class="custom-block-image img-fluid" alt="">
</a>
            </div>
        </div>
    }
</div>
